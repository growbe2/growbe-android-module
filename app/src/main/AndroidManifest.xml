<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.berlingoqc.growbe_android_module">

    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Growbeandroidmodule">
        <service
            android:name="ca.berlingoqc.growbe_android_module.services.gatt.GattServerService"
            android:enabled="true"
            android:process=".process"
            android:exported="true" />

        <service
            android:name="ca.berlingoqc.growbe_android_module.services.SensorService"
            android:enabled="true"
            android:process=".process"
            android:exported="true" />

        <service
            android:name="ca.berlingoqc.growbe_android_module.services.PositionService"
            android:enabled="true"
            android:process=".process"
            android:foregroundServiceType="location"
            android:exported="true" />

        <activity
            android:name=".SettingsActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>